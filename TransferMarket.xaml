<Window x:Class="OWLSimGame.TransferMarket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OWLSimGame"
        mc:Ignorable="d"
        Title="TransferMarket" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="None">
    <Grid Background="#FF4A4C4E">
        <ListBox x:Name="transferList" Margin="22,351,22,18" Background="#FF2C2C2C" SelectionChanged="transferList_SelectionChanged" BorderBrush="{x:Null}"/>
        <Image x:Name="badge" Height="80" Margin="360,26,360,0" VerticalAlignment="Top"/>
        <Button x:Name="back" Content="BACK" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="86" Click="Button_Click" IsEnabled="False" FontFamily="Koverwatch" FontSize="20" Margin="22,26,0,0"/>

    </Grid>
</Window>
